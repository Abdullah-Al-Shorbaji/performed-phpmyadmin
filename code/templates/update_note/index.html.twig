{% extends 'base.html.twig' %}

{% block title %}Hello CreateNoteController!{% endblock %}

{% block body %}

<div class="container-sm mt-5">
    {{ form_start(form,{'method': 'POST', 'action': path('NoteUpdatePost', {'id': id})}) }}
        <div class="mb-3">
            {{ form_row(form.id, {'type': 'hidden', 'value': id}) }}
        </div>    
        
        <div class="mb-3">
          {{ form_row(form.title, {'value': title}) }}
        </div>

        <div class="mb-3">
            {{ form_row(form.text, {'value': text}) }}
        </div>                

        <button type="submit" class="btn btn-primary">Submit</button>

      {{ form_end(form) }}
</div>
{% endblock %}

